<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean id="properties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <description>Imported configuration data</description>
    <property name="location" value="arguments:"/>
  </bean>

  <import resource="gplazma-common.xml"/>

  <bean id="login-strategy" class="org.dcache.auth.GplazmaLoginStrategy">
    <description>Interfaces with gPlazma</description>
    <property name="policyFile" value="${gplazmaPolicy}"/>
  </bean>

</beans>
