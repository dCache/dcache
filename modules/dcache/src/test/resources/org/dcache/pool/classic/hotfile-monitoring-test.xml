<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder/>

    <bean id="migration" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="org.dcache.pool.migration.MigrationModule"/>
    </bean>

    <bean id="testBean" class="org.dcache.pool.classic.HotfileMonitoringTestBean">
        <property name="fileRequestMonitor"
                  value="#{ ${pool.hotfile.monitoring.enable} ? migration : null }"/>
    </bean>

</beans>
