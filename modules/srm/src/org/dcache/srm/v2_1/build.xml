<?xml version="1.0"?>
   <project name="SRM-WS-V2" basedir="." default="build">

      <property name="src_dir" value="."/>
      <property name="lib_dir" value="lib"/>
      <property name="build_dir" value="classes"/>
      <property name="dist_dir" value="dist"/>
      <property name="file_name" value="srm"/>

      <path id="master-classpath">
         <fileset dir="${lib_dir}">
            <include name="*.jar"/>
         </fileset>
         <pathelement path="${build_dir}"/>
      </path>

      <target name="clean">
         <delete dir="${build_dir}"/>
         <delete dir="${dist_dir}"/>
      </target>

      <target name="build" description="Compile main source tree java files">
         <mkdir dir="${build_dir}"/>
         <javac destdir="${build_dir}" debug="true" failonerror="true">
            <src path="${src_dir}"/>
            <classpath refid="master-classpath"/>
         </javac>
      </target>


      <target name="dist" depends="clean, build">
         <mkdir dir="${dist_dir}"/>
         <jar basedir="${build_dir}" destfile="${dist_dir}/${file_name}.jar" />
      </target>
  
   </project>