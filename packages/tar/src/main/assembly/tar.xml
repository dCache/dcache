<assembly>
    <id>tar</id>
    <includeBaseDirectory>true</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <excludes>
                <exclude>*:*:war:*</exclude>
                <exclude>saxon:saxon:*:*</exclude>
                <exclude>org.dcache:dcache-view:jar:*</exclude>
            </excludes>
            <outputDirectory>share/classes</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>saxon:saxon:*:*</include>
            </includes>
            <outputDirectory>share/classes/saxon</outputDirectory>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.dcache:dcache-view:jar:*</include>
            </includes>
            <outputDirectory>share/dcache-view</outputDirectory>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>${filtered-skel}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>bin/**</include>
                <include>sbin/**</include>
            </includes>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${filtered-skel}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>share/defaults/**</include>
                <include>share/lib/**</include>
                <include>share/httpd/static/images/bg.svg</include>
            </includes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${skel}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>doc/**</include>
                <include>etc/**</include>
                <include>man/**</include>
                <include>share/**</include>
            </includes>
            <excludes>
                <exclude>**/.empty-dir</exclude>
                <exclude>share/defaults/**</exclude>
                <exclude>share/lib/**</exclude>
                <exclude>share/httpd/static/images/bg.svg</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

	<!-- Directories that only dCache should have access -->
	<fileSet>
            <directory>${skel}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>var/alarms/**</include>
                <include>var/credentials/**</include>
                <include>var/httpd/**</include>
                <include>var/log/**</include>
                <include>var/pool-history/**</include>
                <include>var/resilience/**</include>
                <include>var/run/**</include>
                <include>var/statistics/**</include>
            </includes>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>600</fileMode>
            <directoryMode>700</directoryMode>
	</fileSet>

	<!-- Directories that need group read access -->
	<fileSet>
            <directory>${skel}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>var/billing/**</include>
            </includes>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>640</fileMode>
            <directoryMode>750</directoryMode>
	</fileSet>

	<!-- Directories that need group read/write access -->
	<fileSet>
            <directory>${skel}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>var/star/**</include>
            </includes>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>660</fileMode>
            <directoryMode>770</directoryMode>
	</fileSet>

	<!-- Directories that must be world-readable -->
	<fileSet>
            <directory>${skel}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>var/config/**</include>
                <include>var/spool/**</include>
            </includes>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
	</fileSet>

        <fileSet>
            <!-- Create empty var/tmp dirctory -->
            <directory>src/main/assembly</directory>
            <outputDirectory>/var/tmp</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
