<assembly>
    <id>system-test</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <excludes>
                <exclude>*:*:war:*</exclude>
                <exclude>saxon:saxon:*:*</exclude>
                <exclude>org.dcache:dcache-plugin-hsqldb:zip:*</exclude>
                <exclude>org.dcache:dcache-view:jar:*</exclude>
            </excludes>
            <outputDirectory>share/classes</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>*:dcache-webadmin:war:*</include>
            </includes>
            <outputDirectory>share/classes/webapps</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <outputFileNameMapping>webadmin.war</outputFileNameMapping>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>saxon:saxon:*:*</include>
            </includes>
            <outputDirectory>share/classes/saxon</outputDirectory>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.dcache:dcache-plugin-hsqldb:zip:*</include>
            </includes>
            <outputDirectory>plugins</outputDirectory>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <unpack>true</unpack>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.dcache:dcache-view:jar:*</include>
            </includes>
            <outputDirectory>share</outputDirectory>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>${filtered-skel}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>bin/**</include>
                <include>sbin/**</include>
                <include>share/lib/*.sh</include>
                <include>share/lib/*.rb</include>
                <include>share/lib/daemon</include>
            </includes>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${filtered-skel}</directory>
            <outputDirectory></outputDirectory>
            <excludes>
                <exclude>bin/**</exclude>
                <exclude>sbin/**</exclude>
                <exclude>share/lib/*.sh</exclude>
                <exclude>share/lib/*.rb</exclude>
                <exclude>share/lib/daemon</exclude>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>/etc/grid-security/certificates</directory>
            <outputDirectory>etc/grid-security/certificates</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>

        <fileSet>
            <directory>${user.home}/.globus/certificates</directory>
            <outputDirectory>etc/grid-security/certificates</outputDirectory>
            <fileMode>644</fileMode>
        </fileSet>
    </fileSets>
</assembly>
