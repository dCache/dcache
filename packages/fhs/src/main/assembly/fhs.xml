<assembly>
    <id>fhs</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <excludes>
                <exclude>*saxon:saxon*:*:*</exclude>
                <exclude>org.dcache:dcache-view:jar:*</exclude>
            </excludes>
            <outputDirectory>usr/share/dcache/classes</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>*saxon:saxon*:*:*</include>
            </includes>
            <outputDirectory>usr/share/dcache/classes/saxon</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>org.dcache:dcache-view:jar:*</include>
            </includes>
            <outputDirectory>usr/share/dcache/dcache-view</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <unpack>true</unpack>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>${filtered-skel}</directory>
            <outputDirectory>usr</outputDirectory>
            <includes>
                <include>bin/**</include>
                <include>sbin/**</include>
            </includes>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${skel}/etc</directory>
            <outputDirectory>etc/dcache</outputDirectory>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${skel}/var</directory>
            <outputDirectory>var/lib/dcache</outputDirectory>
            <excludes>
                <exclude>**/.empty-dir</exclude>
                <exclude>log/**</exclude>
                <exclude>run/**</exclude>
                <exclude>spool/**</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${skel}/var/spool</directory>
            <outputDirectory>var/spool/dcache</outputDirectory>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${skel}/var/log</directory>
            <outputDirectory>var/log/dcache</outputDirectory>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${skel}/man</directory>
            <outputDirectory>usr/share/man</outputDirectory>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${skel}/doc</directory>
            <outputDirectory>usr/share/doc/dcache</outputDirectory>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${filtered-skel}/share</directory>
            <outputDirectory>usr/share/dcache</outputDirectory>
            <includes>
                <include>defaults/**</include>
                <include>lib/**</include>
                <include>httpd/static/images/bg.svg</include>
            </includes>
            <excludes>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

        <fileSet>
            <directory>${skel}/share</directory>
            <outputDirectory>usr/share/dcache</outputDirectory>
            <excludes>
                <exclude>defaults/**</exclude>
                <exclude>lib/**</exclude>
                <exclude>httpd/static/images/bg.svg</exclude>
                <exclude>**/.empty-dir</exclude>
            </excludes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>

    </fileSets>
</assembly>
