#!/usr/bin/make -f

build:

install_app_data:
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs

	cp -Rf etc usr var debian/@PackageName@/

install_package_data:
	dh_installchangelogs
	dh_compress
	dh_installinit --no-start
	dh_installlogrotate
	dh_installcron
	dh_installdebconf
	dh_installdeb
	dh_installdocs
	dh_bash-completion
	dh_fixperms
	dh_gencontrol
	dh_md5sums
	dh_builddeb

clean:
	dh_testdir
	# get rid of the quilt patch state, invalid after rebuild
	rm -Rf .pc
	dh_quilt_unpatch
	dh_testroot
	dh_clean

install: install_app_data install_package_data
binary-indep: build install
binary-arch: binary-indep
binary: binary-indep
.PHONY: clean install
