  RET=`awk --posix -F: '$2==localname {print $4}' localname=${Name} "${UserFile}"`
  if [ -z "${RET}" ] ; then
    yaimlog WARNING "found no data from the function users_NameGetsGroup \"${Name}\""
    return 1
  fi 
  return 0
