    yaimlog ERROR "Programming Error users_NameGetsGroup requires an argument"
    return 1
  fi
  users_confFileGet
  foundUserFile=$?
  UserFile=$RET
  if [ "${foundUserFile}" != "0" ] ; then
    yaimlog ERROR "Could not find Groups For Name as mapping file unavailable"
    return 1
