        RET="$lower,$upper"
        ;;
    *)
        echo "[ERROR]: \$DCACHE_PORT_RANGE_PROTOCOLS_SERVER_MISC has illegal format:"
        echo "[ERROR]: $DCACHE_PORT_RANGE_PROTOCOLS_SERVER_MISC"
