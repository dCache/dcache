    case $lower,$upper in
    ????*,????*)
        RET="$lower,$upper"
        ;;
    *)
        echo "[ERROR]: \$DCACHE_PORT_RANGE_PROTOCOLS_SERVER_GSIFTP has illegal format:"
        echo "[ERROR]: $DCACHE_PORT_RANGE_PROTOCOLS_SERVER_GSIFTP"
